@page
@model LogoutModel
@{
    ViewData["Title"] = "Salir del sistema";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Haga clic aquí para cerrar sesión</button>
            </form>
        }
        else
        {
<p>Has cerrado sesión exitosamente en la aplicación.</p>
        }
    }
</header>
